generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  name         String
  email        String         @unique
  password     String?
  address      String?
  role         Role
  googleLogin  Boolean        @default(false)
  image        String?
  fcmToken     String?
  phone        String?
  batteries    Battery[]
  warranties   Warranty[]
  notification Notification[]
}

model Ucode {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  phone      String?
  otp        String
  expired_at DateTime
  createdAt  DateTime @default(now())
}

model Battery {
  id              Int           @id @default(autoincrement())
  name            String
  serialNumber    String        @unique
  image           String
  purchaseDate    DateTime
  warrantyEndDate DateTime?
  userId          Int
  user            User          @relation(fields: [userId], references: [id])
  status          BatteryStatus @default(PENDING)
  warranties      Warranty[]
}

model Warranty {
  id           Int            @id @default(autoincrement())
  serialNumber String
  image        String
  batteryId    Int
  battery      Battery        @relation(fields: [batteryId], references: [id])
  userId       Int
  user         User           @relation(fields: [userId], references: [id])
  requestDate  DateTime       @default(now())
  status       WarrantyStatus @default(PENDING)

  @@unique([batteryId, userId])
}

model Notification {
  id        Int      @id @default(autoincrement())
  title     String?
  message   String
  image     String?
  eventId   String?
  eventType String?
  data      Json?
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

// Enums for roles and warranty status
enum Role {
  USER
  ADMIN
}

enum WarrantyStatus {
  PENDING
  APPROVED
  REJECTED
}

enum BatteryStatus {
  PENDING
  APPROVED
  REJECTED
}
